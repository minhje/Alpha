@model SignInViewModel

@{
    Layout = "_CleanLayout";
    ViewData["Title"] = "Log In";
}

<section class="center-screen">
    <div id="login" class="surface">

        <div>
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }
        </div>

        <form asp-controller="Auth" asp-action="SignIn" method="post" novalidate enctype="multipart/form-data">
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

            <h1>@ViewData["Title"]</h1>


            <div class="form-group">
                <label asp-for="Email"></label>
                <div class="field-group">
                    <input asp-for="Email">
                    <span asp-validation-for="Email"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <div class="field-group">
                    <input asp-for="Password">
                    <span asp-validation-for="Password"></span>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
            {
                <div class="error validation-error">
                    @ViewBag?.ErrorMessage
                </div>
            }

            <div class="form-group">
                <button type="submit" class="btn btn-submit btn-blue">Login</button>
            </div>

        </form>

        <div class="form-footer">
            <span>Don't have an account?</span>
            <a asp-controller="Auth" asp-action="SignUp">Sign Up</a>
        </div>

    </div>
</section>