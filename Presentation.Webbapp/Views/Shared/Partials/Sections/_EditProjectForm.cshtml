@model EditProjectViewModel

<div id="editProjectModal" class="modal">
    <div class="modal-content">

        <div class="modal-header">
            <h4>Edit Project</h4>
            <button type="button" class="btn-close" data-close="true"></button>
        </div>

        <form asp-action="Edit" asp-controller="Projects" method="post" novalidate data-form="edit">

            <div class="image-previewer">
                <img src="" class="image-preview" />
                <input asp-for="ProjectImage" id="edit-ProjectImage" accept="image/*" class="hide" />
            </div>

            <div class="form-group">
                <label asp-for="ProjectName"></label>
                <div class="field-group">
                    <input asp-for="ProjectName" id="edit-ProjectName" />
                    <span asp-validation-for="ProjectName"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Client"></label>
                <div id="edit-tagged-client" class="form-input form-tag-select">
                    <input type="text" id="edit-client-search" class="form-tag-input" placeholder="Add client..." />
                    <label for="client-search" class="fa-solid fa-ellipsis"></label>
                    <div id="edit-client-search-results" class="search-results"></div>
                    <input asp-for="SelectedClientIds" type="hidden" name="SelectedClientIds" id="edit-SelectedClientIds" />
                    <span asp-validation-for="Client"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <div class="wysiwyg">
                    <textarea asp-for="Description" id="edit-Description"></textarea>
                    <div id="edit-wysiwyg-editor" class="wysiwyg-editor"></div>
                    <div id="edit-wysiwyg-toolbar" class="wysiwyg-toolbar">
                        <span class="ql-formats">
                            <button class="ql-bold"></button>
                            <button class="ql-italic"></button>
                            <button class="ql-underline"></button>
                        </span>
                        <span class="ql-formats">
                            <button class="ql-align" value=""></button>
                            <button class="ql-align" value="center"></button>
                            <button class="ql-align" value="right"></button>

                        </span>
                        <span class="ql-formats">
                            <button class="ql-list" value="bullet"></button>
                            <button class="ql-list" value="ordered"></button>
                        </span>
                        <span class="ql-formats">
                            <button class="ql-link"></button>
                        </span>
                    </div>
                    <span asp-validation-for="Description"></span>
                </div>
            </div>

            <div class="form-horizontal-group">
                <div class="form-group">
                    <label asp-for="StartDate"></label>
                    <div class="field-group">
                        <input asp-for="StartDate" id="edit-StartDate" />
                        <span asp-validation-for="StartDate"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="EndDate"></label>
                    <div class="field-group">
                        <input asp-for="EndDate" id="edit-EndDate" />
                        <span asp-validation-for="EndDate"></span>
                    </div>
                </div>
            </div>

            @*    <div class="form-group"> 
                 <label asp-for="Member"></label> 
                 <div class="field-group"> 
                     <input asp-for="Member" /> 
                     <span asp-validation-for="Member"></span> 
                 </div> 
                 </div> *@

            <div class="form-group">
                <label asp-for="Budget"></label>
                <div class="field-group with-dollar">
                    <span class="input-dollar"><i class="fa-solid fa-dollar-sign"></i></span>
                    <input asp-for="Budget" id="edit-Budget" />
                    <span asp-validation-for="Budget"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-submit btn-blue">Save</button>
        </form>

    </div>
</div>


<script>
    // Hjälp tagen av ChatGPT 4o för att få ut Clients korrekt.
    document.addEventListener("DOMContentLoaded", () => {
        const clientSearchInput = document.getElementById('edit-client-search');
        const clientSearchResults = document.getElementById('edit-client-search-results');
        const selectedClientIds = document.getElementById('edit-SelectedClientIds');

        if (clientSearchInput && clientSearchResults && selectedClientIds) {
            initTagSelector({
                containerId: 'edit-tagged-client',
                inputId: 'edit-client-search',
                resultsId: 'edit-client-search-results',
                searchUrl: (query) => `/Clients/SearchClients?term=${encodeURIComponent(query)}`,
                displayProperty: 'clientName',
                tagClass: 'client-tag',
                emptyMessage: 'No clients found.',
                hiddenInputId: 'edit-SelectedClientIds',
                preselected: [] 
            });
        } else {
            console.error("One or more required elements for initTagSelector are missing.");
        }

        initWysiwyg('edit-wysiwyg-editor', 'edit-wysiwyg-toolbar', 'Description', '@Html.Raw(ViewBag.Description ?? "")')
    });

        function initWysiwyg(wysiwygEditorId, wysiwygToolbarId, textareaId, content) {
        const textarea = document.getElementById(textareaId);
        const editor = document.getElementById(wysiwygEditorId); 

        const quill = new Quill(editor, {
            modules: {
                syntax: true,
                toolbar: '#' + wysiwygToolbarId
            },
            placeholder: 'Enter a description',
            theme: "snow"
        });

        if (content)
            quill.root.innerHTML = content;

        quill.on('text-change', () => {
            textarea.value = quill.root.innerHTML;
        });
    }

</script>
