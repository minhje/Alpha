@model EditMemberViewModel

<div id="editMemberModal" class="modal">
    <div class="modal-content">

        <div class="modal-header">
            <h3>Edit Member</h3>
            <button type="button" class="btn-close" data-close="true"></button>
        </div>

        <form novalidate method="post" asp-action="Edit" asp-controller="Members">
            <input asp-for="Id" readonly type="hidden" />

            <div class="image-previewer circle">
                <img src="" class="image-preview" />
                <input asp-for="MemberImage" accept="image/*" class="hide" />
            </div>

            <div class="form-group">
                <label asp-for="FirstName"></label>
                <div class="field-group">
                    <input asp-for="FirstName" />
                    <span asp-validation-for="FirstName"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="LastName"></label>
                <div class="field-group">
                    <input asp-for="LastName" />
                    <span asp-validation-for="LastName"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <div class="field-group">
                    <input asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Phone"></label>
                <div class="field-group">
                    <input asp-for="Phone" />
                    <span asp-validation-for="Phone"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="JobTitle"></label>
                <div class="field-group">
                    <input asp-for="JobTitle" />
                    <span asp-validation-for="JobTitle"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="StreetName"></label>
                <div class="field-group">
                    <input asp-for="StreetName" />
                    <span asp-validation-for="StreetName"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PostalCode"></label>
                <div class="field-group">
                    <input asp-for="PostalCode" />
                    <span asp-validation-for="PostalCode"></span>
                </div>
            </div>  <div class="form-group">
                <label asp-for="City"></label>
                <div class="field-group">
                    <input asp-for="City" />
                    <span asp-validation-for="City"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-submit btn-blue">Create</button>
        </form>

    </div>
</div>